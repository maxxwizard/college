public class DekkerThread extends MyThread {

	public DekkerThread(int i) {
		super(i);
	}

	@Override
	void EnterCS() {
		int i = super.id;
		int j = not(i);

		Global.flag[i] = true;
		while (Global.flag[j] == true) {
			if (Global.turn == j) {
				Global.flag[i] = false;
				while (Global.flag[j] == true) {
					/*
					try {
						Thread.sleep(1);
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}*/
				}
				Global.flag[i] = true;
			}
		}
	}

	@Override
	void ExitCS() {
		int i = super.id;
		int j = not(i);

		Global.turn = j;
		Global.flag[i] = false;
	}

	private int not(int i) {
		if (i == 0)
			return 1;
		else
			return 0;
	}

}
