public class DekkerThread extends MyThread {

	public DekkerThread(int i) {
		super(i);
	}

	@Override
	void EnterCS() {
		int i = super.id;
		int j = not(i);

		Main.flag.set(i, 1);
		while (Main.flag.get(j) == 1) {
			if (Main.turn == j) {
				Main.flag.set(i, 0);
				while (Main.flag.get(j) == 1) {
				}
				Main.flag.set(i, 1);
			}
		}
	}

	@Override
	void ExitCS() {
		int i = super.id;
		int j = not(i);

		Global.turn = j;
		Global.flag[i] = false;
	}

	private int not(int i) {
		if (i == 0)
			return 1;
		else
			return 0;
	}

}
